  <editthing
      compset="Class"
      name="Class"
      prefix="c"
      description="This is for classes."
      summary="This is for classes.">

      <inputthing
          name="Primary Abilities"
          helptext="Select the primary ability scores for the class.">
          <it_taglist group="PrimAbil" tag="?" />
      </inputthing>

      <inputthing
          name="Secondary Abilities"
          helptext="Select the secondary ability scores for the class.">
          <it_taglist group="SecAbil" tag="?" />
      </inputthing>

      <inputthing
          name="Weapon Groups"
          helptext="Select the weapon groups granted to the class.">
          <it_bootlist compset="WepGroup" />
      </inputthing>




  </editthing>

  <editthing
      compset="WepGroup"
      name="Weapon Group"
      prefix="wg"
      description="Weapon groups."
      summary="Weapon groups.">

      <inputthing
          name="Associated Ability Score"
          helptext="Select the associated ability score for the weapon group.">
          <it_tagpick group="WepAbility" tag="?" />
      </inputthing>

      <inputthing
          name="Damage Override"
          helptext="If this weapon group uses an ability other than Strength for damage, select it here.">
          <it_tagpick group="DmgOver" tag="?" />
      </inputthing>

  </editthing>

  <!-- Race editthing -->
  <editthing
    compset="Race"
    name="Race"
    prefix="r"
    description="Races have no special fields - only a name. If a race confers an ability,{br}create it as a special ability and bootstrap it from the race."
    summary="Defines a Race that can be selected by a character.">

    <inputthing
        name="Accuracy"
        helptext="Set the accuracy given to the hero from their race.">
        <it_field field="rACC" />
    </inputthing>

    <inputthing
        name="Communication"
        helptext="Set the communication given to the hero from their race.">
        <it_field field="rCOM" />
    </inputthing>

    <inputthing
        name="Constitution"
        helptext="Set the constitution given to the hero from their race.">
        <it_field field="rCON" />
    </inputthing>

    <inputthing
        name="Dexterity"
        helptext="Set the dexterity given to the hero from their race.">
        <it_field field="rDEX" />
    </inputthing>

    <inputthing
        name="Fighting"
        helptext="Set the fighting given to the hero from their race.">
        <it_field field="rFIG" />
    </inputthing>

    <inputthing
        name="Intelligence"
        helptext="Set the intelligence given to the hero from their race.">
        <it_field field="rINT" />
    </inputthing>

    <inputthing
        name="Perception"
        helptext="Set the perception given to the hero from their race.">
        <it_field field="rPER" />
    </inputthing>

    <inputthing
        name="Strength"
        helptext="Set the strength given to the hero from their race.">
        <it_field field="rSTR" />
    </inputthing>

    <inputthing
        name="Willpower"
        helptext="Set the willpower given to the hero from their race.">
        <it_field field="rWILL" />
    </inputthing>

    <inputthing
        name="Base Speed"
        helptext="Set the base speed of the race.">
        <it_field field="rSpeed" />
    </inputthing>

    <inputthing
        name="Language"
        helptext="Select the languages known by the race.">
        <it_bootcustom compset="Language">
            <inputthing
                name="Can Write?">
                <it_tagcheck group="Helper" tag="CanWrite" default="yes" />
            </inputthing>
            <inputthing
                name="Can Read?">
                <it_tagcheck group="Helper" tag="CanRead" default="yes" />
            </inputthing>
        </it_bootcustom>
    </inputthing>

    <inputthing
        name="Racial Focus"
        helptext="These are the focuses selected by the race, but not from the background benefits.">
        <it_taglist group="RaceFocus" tag="?" />
    </inputthing>

    <inputthing
        name="Racial Benefit Ability"
        helptext="These are the ability scores that can be picked as a racial benefit.">
        <it_taglist group="RaceGain" tag="?" />
    </inputthing>

    <inputthing
        name="Racial Benefit Focus"
        helptext="These are the focuses that can be chosen as racial benefit.">
        <it_taglist group="RaceFocBen" tag="?" />
    </inputthing>

    <inputthing
        name="Racial Benefit Wep Group"
        helptext="These are the weapon groups that can be selected as racial benefits.">
        <it_taglist group="WepGroRac" tag="?" />
    </inputthing>

    </editthing>

    <editthing
        compset="Language"
        name="Languages"
        prefix="l"
        description="Languages that can be known and learned."
        summary="Languages that can be known and leanred.">
    </editthing>


  <!-- Equipment editthing - for basic gear -->
  <editthing
    compset="Equipment"
    name="Equipment"
    prefix="eq"
    description="Weapons, armor, and vehicles all have their own tabs for creating objects of those types."
    summary="Defines a simple piece of equipment that can be selected on the Gear tab.">
    <inputthing
      name="Cost"
      helptext="Specify the standard cost of the item, with a value of 0 meaning it is free.">
      <it_field field="grCost"/>
      </inputthing>
    <inputthing
      name="Lot Cost"
      helptext="Specify the cost of a full 'lot' of the item, where the lot size is given on the right. The 'lot cost' overrides any individual cost given above.">
      <it_field field="grLotCost"/>
      </inputthing>
    <inputthing
      name="Weight"
      helptext="Specify the weight of the item.">
      <it_field field="gearWeight"/>
      </inputthing>
    <inputthing
      name="Container Behavior"
      helptext="Specify whether this piece of equipment can contain other equipment. If this equipment can contain other equipment AND be contained within other equipment, select 'Holder'. If the equipment can only contain other equipment, select 'Top Holder'. If the equipment can only be contained by other equipment, do not select anything.">
      <it_tagpick group="thing" tag="holder?" />
      </inputthing>
    </editthing>


